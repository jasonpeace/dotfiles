# raid #

/alias raid
{
/nick SneakyHippie
/g fflanda
/topic Freak Hippie Accident
/g bdbdbdbd
/nick jpeace
}


# authorize me
/alias auth
{
        /set display off
        /msg server p flames
        /echo   (doing auth)
        /set display on
}


# clear alias so that after a /clear new text starts at the bottom instead of
# at the top.
/alias clear
{
        ${K}${K}clear
        @count=100
        while (count)
        {
                echo
                @count=count-1
        }
}


# take me home....
/alias bd
{
        # join group slac
        /join bdbdbdbd


        # set idle-mod to maximum value
        /msg server status im 0


        # turn off idle boot
        /msg server status b 0


        # set a dumb topic
        #/topic floccinaucinihilipilification 
         /topic strategic canned meat reserves

        # re authorize ourself when we go home to get any server-sent messages
        /auth 
}


# silly defaults
/alias do_init
{
        # get rid of the stupid + continuation foo
        /set -continued_line


        # indent instead of plus
        /set indent on
}

/alias away
{
/m server away *examining infinity*
}
/alias noaway
{
/m server noaway
}
# this is the stuff we really do at logon
/do_init
/bd
/m server shush -s *@*THATGROOVE.COM
